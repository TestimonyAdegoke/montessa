# Database (Supabase Postgres)
# Runtime connection string (can use Supabase pooled connection / pgBouncer)
DATABASE_URL="postgresql://postgres:password@db.<project-ref>.supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct connection string for Prisma Migrate (non-pooled 5432 port)
DIRECT_DATABASE_URL="postgresql://postgres:password@db.<project-ref>.supabase.co:5432/postgres"

# Optional: shadow database URL for Prisma migrations (can point to same DB in Supabase)
SHADOW_DATABASE_URL="postgresql://postgres:password@db.<project-ref>.supabase.co:5432/postgres"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# UploadThing (for file uploads)
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Stripe (for payments)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Email (optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# S3 or Cloud Storage (optional)
S3_BUCKET_NAME="onebitms-uploads"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"

# SSO - Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# SSO - Microsoft Azure AD OAuth (optional)
AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-ad-client-secret"
AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# App Config
NEXT_PUBLIC_APP_NAME="OnebitMS"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
