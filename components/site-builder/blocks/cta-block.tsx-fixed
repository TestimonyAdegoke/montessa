    options: [
      { label: "None", value: "py-0" },
      { label: "Small", value: "py-12" },
      { label: "Medium", value: "py-24" },
      { label: "Large", value: "py-32" }
    ],
    default: "py-24"
  },
  {
    name: "paddingBottom",
    label: "Bottom Padding",
    type: "select",
    group: "Layout",
    options: [
      { label: "None", value: "py-0" },
      { label: "Small", value: "py-12" },
      { label: "Medium", value: "py-24" },
      { label: "Large", value: "py-32" }
    ],
    default: "py-24"
  }
]
