    default: 0
  },
  { name: "showOverlay", label: "Dark Overlay", type: "boolean", group: "Style" },
  {
    name: "overlayOpacity",
    label: "Overlay Opacity",
    type: "number",
    group: "Style",
    min: 0,
    max: 100,
    step: 10,
